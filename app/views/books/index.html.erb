<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td class="book-title"><%= book.title %></td>
        <td class="book-body"><%= book.body %></td>
        <td class="book-show"><%= link_to "Show", book_path(book) %></td>
        <td class="book-edit"><%= link_to "Edit", edit_book_path(book) %></td>
        <td class="book-destroy"><%= link_to "Destroy", book_path(book), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>

    <h2>New book</h2>

    <% if @book.errors.any? %>
      <div id="error_explanation">
        <h2><%= @book.errors.count %>errors</h2>
          <ul>
            <% @book.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
      </div>
    <% end %>

    <%= form_for(@book) do |f| %>

       <h4>Title</h4>
       <%= f.text_field :title %>

      <br>

       <h4>Body</h4>
       <%= f.text_area :body %>

        <br>

       <%= f.submit 'Create Book' %>

    <% end %>